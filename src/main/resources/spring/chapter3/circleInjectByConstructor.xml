<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

		<bean id="circleA" class="com.jemmy.spring.chapter3.bean.CircleA">
			<constructor-arg index="0" ref="circleB" />
		</bean>
		<bean id="circleB" class="com.jemmy.spring.chapter3.bean.CircleB">
			<constructor-arg index="0" ref="circleC" />
		</bean>
		<bean id="circleC" class="com.jemmy.spring.chapter3.bean.CircleC">
			<constructor-arg index="0" ref="circleA" />
		</bean>

</beans>